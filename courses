<script type="text/javascript">
$(document).ready(function(){
    $("#b").hide();
    $("#a").hide();
});

$(document).ready(function(){
    $("#beginner").click(function () {
    $("#b").css("backgroundColor", "Red");
  //  $("#b").show();
    $("#b").fadeIn(1000); 
    $("#a").hide();
});
});

$(document).ready(function(){
    $("#advanced").click(function () {
    $("#a").css("backgroundColor", "yellow");
   // $("#a").show();
    $("#a").fadeIn(1000); 
    $("#b").hide();
});
});

$(document).ready(function(){  
    $("#flip").click(function(){  
        $("#panel").slideToggle("slow");  
    });  
});  
</script>
